@using System
@using Tanka.Markdown.Blocks

@helper RenderHeading(Heading heading)
{
    @Raw(String.Format("<h{0}>{1}</h{0}>", heading.Level, heading.Text))
}

@foreach (var block in Model.Blocks)
{
    if (block is Heading)
    {
        @RenderHeading(block as Heading)
    }

    if (block is Paragraph)
    {
        
    }
}